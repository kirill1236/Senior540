def show_menu():
    print("="* 40)
    print("1. –ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞")
    print("2. –ü—Ä–æ—Ñ–∏–ª—å")
    print("3. –ù–∞—Å—Ç—Ä–æ–π–∫–∏")
    print("4. –ú–æ—Ç–∏–≤–∞—Ü–∏—è")
    print("5. –í—ã—Ö–æ–¥")
    print("="* 40)

def handle_choice(choice):  # ‚Üê –Ω–∞ —É—Ä–æ–≤–Ω–µ –º–æ–¥—É–ª—è, –Ω–µ –≤–ª–æ–∂–µ–Ω–∞
    if choice == "1":
        –≥–ª–∞–≤–Ω–∞—è_—Å—Ç—Ä–∞–Ω–∏—Ü–∞()
    elif choice == "2":
        –ø—Ä–æ—Ñ–∏–ª—å()
    elif choice == "3":
        –Ω–∞—Å—Ç—Ä–æ–π–∫–∏()
    elif choice == "4":
        –º–æ—Ç–∏–≤–∞—Ü–∏—è()
    elif choice == "5":
        print("–í—ã—Ö–æ–¥ –∏–∑ –ø—Ä–æ–≥—Ä–∞–º–º—ã. –î–æ —Å–≤–∏–¥–∞–Ω–∏—è!")
        return False
    else:  # ‚Üê else –±–µ–∑ return –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –∑–¥–µ—Å—å
        print("–ù–µ–≤–µ—Ä–Ω—ã–π –≤—ã–±–æ—Ä. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Å–Ω–æ–≤–∞.")
    return True

def –≥–ª–∞–≤–Ω–∞—è_—Å—Ç—Ä–∞–Ω–∏—Ü–∞():
    print("–í—ã –Ω–∞ –≥–ª–∞–≤–Ω–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ")

def –ø—Ä–æ—Ñ–∏–ª—å():
    print("–í–∞—à –ø—Ä–æ—Ñ–∏–ª—å")

def –Ω–∞—Å—Ç—Ä–æ–π–∫–∏():
    print("–ù–∞—Å—Ç—Ä–æ–π–∫–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è")

def –º–æ—Ç–∏–≤–∞—Ü–∏—è():
    print("–ú–æ—Ç–∏–≤–∏—Ä—É—é—â–∞—è —Ü–∏—Ç–∞—Ç–∞!")

def main_menu():
    while True:
        show_menu()
        choice = input("–í—ã–±–µ—Ä–∏—Ç–µ –ø—É–Ω–∫—Ç –º–µ–Ω—é (1-5): ")
        if not handle_choice(choice):
            break

if __name__ == "__main__":  # ‚Üê –≤–Ω–µ —Ü–∏–∫–ª–∞ –∏ –≤–Ω–µ —Ñ—É–Ω–∫—Ü–∏–π
    main_menu()

